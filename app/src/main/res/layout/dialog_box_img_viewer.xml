<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_height="550dp"
    android:layout_gravity="center"
    android:background="@color/naviBlack">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/PV_image"
        android:layout_width="match_parent"
        android:layout_above="@+id/Btn_close_viewer"
        android:layout_height="match_parent"
        android:background="@color/naviBlack" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Btn_close_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/navi1"
        android:text="@string/Btn_close_viewer"
        android:textAllCaps="true"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_close_dialog"
        app:iconGravity="textEnd"
        app:tint="@color/white" />

</RelativeLayout>